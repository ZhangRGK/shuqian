{
    "name": "bigmarks",
    "version": "1.1",
    "manifest_version": 4,
    "description": "用来和书签同步收藏的书签",
    "browser_action": {
        "default_icon": "icon128.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["jquery-2.1.1.min.js", "meteor-ddp.js", "sync.js"]
    },
    "icons": { 
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "bookmarks",
        "tabs",
        "http://shuqian.bigzhu.org/"
    ],
    "content_scripts": [
      {
          "matches": ["http://localhost:3000/*"],
          "js": ["jquery-2.1.1.min.js","content.js"]
      }
    ],
    "homepage_url": "http://shuqian.bigzhu.org"
}
